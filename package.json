{
  "name": "my-nft-marketplace",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint:js": "eslint --ext \".js,.vue\" --ignore-path .gitignore .",
    "lint:prettier": "prettier --check .",
    "lint": "yarn lint:js && yarn lint:prettier",
    "lintfix": "prettier --write --list-different . && yarn lint:js --fix",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "console": "hardhat console --network localhost",
    "interact:testnet": "hardhat run --network testnet",
    "interact:local": "hardhat run --network localhost",
    "deploy:testnet": "hardhat run --network testnet scripts/upgradeable/deploy_contract.js",
    "deploy:local": "hardhat run --network localhost scripts/upgradeable/deploy_contract.js",
    "upgrade:testnet": "hardhat run --network testnet scripts/upgradeable/upgrade_contract.js",
    "upgrade:local": "hardhat run --network localhost scripts/upgradeable/upgrade_contract.js",
    "chain": "hardhat node"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.13.6",
    "@nuxtjs/pwa": "^3.3.5",
    "core-js": "^3.25.3",
    "firebase-tools": "^11.16.1",
    "ipfs-http-client": "^59.0.0",
    "nuxt": "^2.15.8",
    "pug": "^3.0.2",
    "pug-plain-loader": "^1.1.0",
    "vue": "^2.7.10",
    "vue-server-renderer": "^2.7.10",
    "vue-template-compiler": "^2.7.10",
    "vuetify": "^2.6.10",
    "web3": "^1.8.1"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "@ethersproject/abi": "^5.4.7",
    "@ethersproject/providers": "^5.4.7",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nuxtjs/eslint-config": "^11.0.0",
    "@nuxtjs/eslint-module": "^3.1.0",
    "@nuxtjs/vuetify": "^1.12.3",
    "@openzeppelin/contracts": "^4.5.0",
    "@openzeppelin/contracts-upgradeable": "^4.8.0",
    "@openzeppelin/hardhat-upgrades": "^1.21.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "chai": "^4.3.4",
    "dotenv": "^16.0.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-nuxt": "^4.0.0",
    "eslint-plugin-vue": "^9.5.1",
    "ethereum-waffle": "^3.4.0",
    "hardhat": "^2.12.2",
    "hardhat-contract-sizer": "^2.4.0",
    "hardhat-deploy": "^0.9.29",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "pug": "^3.0.2",
    "pug-plain-loader": "^1.1.0",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.8.0",
    "typechain": "^8.1.0"
  }
